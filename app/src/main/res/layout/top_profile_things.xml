<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvTotalPosts"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="118dp"
        android:text="0"
        android:textColor="@color/black"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tvPosts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTotalPosts"
        android:layout_marginStart="103dp"
        android:text="Posts"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvTotalFollowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_toRightOf="@id/tvTotalPosts"
        android:text="0"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvFollowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTotalFollowers"
        android:layout_marginStart="72dp"
        android:layout_toRightOf="@id/tvPosts"
        android:text="Followers"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvTotalFollowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_toRightOf="@id/tvTotalFollowers"
        android:text="0"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvFollowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTotalFollowing"
        android:layout_marginStart="58dp"
        android:layout_toRightOf="@id/tvFollowers"
        android:text="Following"
        android:textColor="@color/black" />


    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/tvTotalPosts"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="56dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="#FAF7F7"
        android:onClick="EditProfile"
        android:text="Edit Profile"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#040404"
        android:textStyle="bold" />

</RelativeLayout>