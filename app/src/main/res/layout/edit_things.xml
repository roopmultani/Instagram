<?xml version="1.0" encoding="utf-8"?>


<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/profile_photo"
                android:layout_marginTop="20dp"
                app:civ_border_color="@color/black"
                app:civ_border_width="2dp"
                android:layout_centerHorizontal="true"
                tools:ignore="MissingClass" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Photo"
                android:id="@+id/tvChangePro"
                android:layout_below="@+id/profile_photo"
                android:layout_centerHorizontal="true"
                android:textColor="@color/blue"
                android:textSize="16sp"/>

            <!-- Name Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/tvChangePro"
                android:id="@+id/rlName"
                android:layout_marginTop="35dp">

                <TextView
                    android:layout_width="44dp"
                    android:layout_height="35dp"
                    android:text="Name"
                    android:layout_marginTop="12dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#070707"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="90dp"
                    android:background="@drawable/grey_color"
                    android:hint="Name"
                    android:inputType="textNoSuggestions" />

            </RelativeLayout>


            <!-- Username Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/rlName"
                android:layout_marginTop="15dp"
                android:id="@+id/rlUsername">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#070707"
                    android:textSize="16sp"
                    android:text="Username" />

                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="90dp"
                    android:background="@drawable/grey_color"
                    android:hint="Username"
                    android:inputType="textNoSuggestions" />

            </RelativeLayout>


            <!-- Website Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/rlUsername"
                android:id="@+id/rlWebsite"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#070707"
                    android:textSize="16sp"
                    android:text="Website" />

                <EditText
                    android:id="@+id/etWebsite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="90dp"
                    android:background="@drawable/grey_color"
                    android:hint="Website"
                    android:inputType="textNoSuggestions" />

            </RelativeLayout>

            <!-- Bio Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/rlWebsite"
                android:id="@+id/rlBio"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:text="Bio"
                    android:layout_marginTop="12dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#070707"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/etBio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="90dp"
                    android:background="@drawable/grey_color"
                    android:hint="Bio"
                    android:inputType="textNoSuggestions" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</merge>



